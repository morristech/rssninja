<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.RssNinja.Dark" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar.Dark</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar.Dark" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="backgroundActivated">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <style name="backgroundActivated.minHeight">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>